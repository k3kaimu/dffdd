{
    "name": "dffdd",
    "description": "Digital Filter Library for Full Duplex writted in D",
    "copyright": "Copyright Â© 2015, Kazuki KOMATSU",
    "authors": ["Kazuki Komatsu"],
    "targetType": "library",

    "__foo": "/usr/local/opt/openblas/lib",
    "libs": ["openblas", "nlopt"],
    "lflags-osx": ["-L/usr/local/opt/openblas/lib"],
    "lflags-linux": ["-L/opt/OpenBLAS/lib"],
    "dflags-ldc":["-oq"],

    "dependencies": {
        "carbon": {"path": "../carbon"},
        "dfftw3": "~>1.0.1",
        "cblas": "~>1.0.0",
        "mir-algorithm": "~>1.0.0-alpha4",
        "libnlopt": "~>0.2.0",
        "lubeck": "~>1.1.2"
    },

    "buildTypes": {
        "debug": { "buildOptions": ["debugMode"] },
        "release": {
            "buildOptions": ["releaseMode", "optimize", "inline"],
            "__dflags-ldc": ["-enable-cross-module-inlining", "-mcpu=native", "-oq"]
        }
    }
}
