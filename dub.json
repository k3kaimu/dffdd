{
    "name": "dffdd",
    "description": "Digital Filter Library for Full Duplex writted in D",
    "copyright": "Copyright Â© 2015, Kazuki KOMATSU",
    "authors": ["Kazuki Komatsu"],
    "targetType": "library",

    "__foo": "/usr/local/opt/openblas/lib",
    "libs-osx": ["openblas", "itpp", "stdc++"],
    "lflags-osx": ["-L/usr/local/opt/openblas/lib", "-L-litpp", "-L-lstdc++"],

    "dependencies": {
        "carbon": { "path": "../../../github/carbon" },
        "dranges": { "path": "../../../github/dranges" },
        "pyd": "~>0.9.8",
    },
    "subConfigurations": {
        "pyd": "python27",
    },

    "configurations":[
        {
            "name": "library",
        },

        {
            "name": "preBuildCopyCommand",
            "copyFiles": ["cpp/ditpp.cpp"],
        },

        {
            "name": "preBuildPostCopyCommand",
            "preGenerateCommands": ["g++ -std=c++14 -c ditpp.cpp"]
        }
    ]
}
