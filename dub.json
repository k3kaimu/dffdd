{
    "name": "dffdd",
    "description": "Digital Filter Library for Full Duplex written in D",
    "copyright": "Copyright Â© 2015, Kazuki KOMATSU",
    "authors": ["Kazuki Komatsu"],
    "targetType": "library",

    "__foo": "/usr/local/opt/openblas/lib",
    "libs": ["openblas", "nlopt"],
    "lflags-osx": ["-L/usr/local/opt/openblas/lib"],
    "lflags-linux": ["-L/opt/OpenBLAS/lib"],
    "dflags-ldc": ["-oq"],

    "dependencies": {
        "carbon": { "path": "../carbon" },
        "dfftw3": "~>1.0.1",
        "cblas": "~>2.3.1",
        "mir-algorithm": "~>3.9.12",
        "libnlopt": "~>0.2.0",
        "lubeck": { "path": "../lubeck" },
        "mir-lapack": "~>1.2.8",
        "mir-blas": "~>1.1.13",
        "dffdd_simd": { "path": "dffdd_simd" }
    },

    "subConfigurations": {
        "lubeck": "openblas"
    },

    "environments": {
        "CC": "gcc-11"
    },

    "buildTypes": {
        "debug": { "buildOptions": ["debugMode"] },
        "release": {
            "buildOptions": ["releaseMode", "optimize", "inline"],
            "__dflags-ldc": ["-enable-cross-module-inlining", "-mcpu=native", "-oq"]
        }
    }
}